<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_below="@+id/header"
            android:layout_marginTop="60dp"
            android:background="@drawable/half_yellow"
            android:text="Forgot Password"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/signUp"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_below="@+id/header"
            android:layout_toRightOf="@+id/forgot_password"
            android:layout_marginTop="60dp"
            android:background="@drawable/half_white"
            android:text="Sign Up "
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>



    <EditText
        android:id="@+id/email"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:hint=" Enter email address"
        android:textColorHint="#818080"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@id/header2"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:src="@drawable/mail"
        android:layout_toLeftOf="@id/email"
        android:layout_below="@+id/header2"
        />

    <Button
        android:id="@+id/set_recovery_mail"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:text="Send email"
        android:layout_marginTop="50dp"
        android:layout_below="@id/email"
        android:textColor="@android:color/black"
        android:background="@drawable/button_yellow"/>

</RelativeLayout>