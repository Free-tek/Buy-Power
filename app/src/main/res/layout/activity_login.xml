<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/header"
        android:layout_height="100dp"
        android:layout_width="140dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_one"
        />


    <RelativeLayout
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header">

        <TextView
            android:id="@+id/signUp"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/half_yellow"
            android:text="Sign Up"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/signUp"
            android:layout_marginTop="20dp"
            android:background="@drawable/half_white"
            android:text="Forgot Password"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>




    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/header2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/background"
        android:hint="Email"
        android:textColorHint="#818080"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        />


    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:src="@drawable/mail"
        android:layout_toLeftOf="@id/email"
        android:layout_below="@+id/header2"
        />


    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/email"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/background"
        android:hint="Password"
        android:textColorHint="#818080"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:src="@drawable/lock"
        android:layout_toLeftOf="@id/password"
        android:layout_below="@+id/email"
        />


    <Button
        android:id="@+id/login"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:text="Sign In â†’"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password"
        android:background="@drawable/button_yellow"/>


</RelativeLayout>