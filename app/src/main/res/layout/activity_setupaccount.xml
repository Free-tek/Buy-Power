<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/header"
                android:layout_height="100dp"
                android:layout_width="140dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_one"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/header2"
                android:layout_below="@id/header"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/signUp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/half_yellow"
                    android:text="Sign Up"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    />


                <TextView
                    android:id="@+id/login"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/signUp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/half_white"
                    android:text="Login"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>


            </RelativeLayout>




            <EditText
                android:id="@+id/name"
                android:layout_height="40dp"
                android:layout_width="225dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:hint="Full Name"
                android:layout_below="@id/header2"
                android:textColorHint="#818080"
                android:textColor="@android:color/black"/>


            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginTop="45dp"
                android:layout_toLeftOf="@+id/name"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_below="@id/header2"
                />



            <EditText
                android:id="@+id/serial_no"
                android:layout_height="40dp"
                android:layout_width="225dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:hint="Product serial Number"
                android:layout_below="@id/name"
                android:textColorHint="#818080"
                android:textColor="@android:color/black"/>


            <ImageView
                android:layout_height="22dp"
                android:layout_width="22dp"
                android:layout_marginTop="28dp"
                android:layout_toLeftOf="@+id/serial_no"
                android:src="@drawable/serial_no"
                android:layout_below="@id/name"
                />

            <EditText
                android:id="@+id/email"
                android:layout_height="40dp"
                android:layout_width="225dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:layout_below="@+id/serial_no"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:textColorHint="#818080"
                android:textColor="@android:color/black"/>


            <ImageView
                android:layout_height="22dp"
                android:layout_width="22dp"
                android:layout_marginTop="28dp"
                android:layout_toLeftOf="@+id/email"
                android:src="@drawable/mail"
                android:layout_below="@id/serial_no"
                />



            <EditText
                android:id="@+id/password"
                android:layout_height="40dp"
                android:layout_width="225dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:layout_below="@+id/email"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#818080"
                android:textColor="@android:color/black"/>


            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginTop="28dp"
                android:layout_toLeftOf="@+id/password"
                android:src="@drawable/lock"
                android:layout_below="@id/email"
                />


            <EditText
                android:id="@+id/confirm_password"
                android:layout_height="40dp"
                android:layout_width="225dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:layout_below="@+id/password"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColorHint="#818080"
                android:textColor="@android:color/black"/>


            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginTop="28dp"
                android:layout_toLeftOf="@+id/confirm_password"
                android:src="@drawable/lock"
                android:layout_below="@id/password"
                />


            <EditText
                android:id="@+id/phone_no"
                android:layout_height="40dp"
                android:layout_width="225dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:layout_below="@+id/confirm_password"
                android:hint="Phone"
                android:inputType="phone"
                android:textColorHint="#818080"
                android:textColor="@android:color/black"/>


            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginTop="28dp"
                android:layout_toLeftOf="@+id/phone_no"
                android:src="@drawable/phone"
                android:layout_below="@id/confirm_password"
                />


            <Button
                android:id="@+id/set_up"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/phone_no"
                android:text="Set Up"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_yellow"
                android:layout_marginBottom="50dp"
                />



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>